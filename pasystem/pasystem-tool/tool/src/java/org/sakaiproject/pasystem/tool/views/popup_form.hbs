<form class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label" for="descriptor">Description</label>
    <div class="col-sm-10">
      <input class="form-control" type="text" name="descriptor" id="descriptor" value="{{popup.descriptor}}" required />
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="template">Template</label>
    <div class="col-sm-10">
      <input type="file" name="template" id="template" required />
    </div>
  </div>
  <div class="form-group">
    <label  class="col-sm-2 control-label" for="start_time">Start Time</label>
    <div class="col-sm-10">
      <div class="input-group">
        <input class="form-control datepicker" type="text" name="start_time" id="start_time" value="{{show-time this popup.startTime}}"/>
        <span class="input-group-btn">
          <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-calendar"></span></button>
        </span>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label  class="col-sm-2 control-label" for="end_time">End Time</label>
    <div class="col-sm-10">
      <div class="input-group">
        <input class="form-control datepicker" type="text" name="end_time" id="end_time" value="{{show-time this popup.endTime}}"/>
        <span class="input-group-btn">
          <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-calendar"></span></button>
        </span>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="distribution">Distribution</label>
    <div class="col-sm-10">
        <label>
            <input type="radio" name="open-campaign" value="open-campaign" {{#if isOpen}}checked="checked"{{/if}}>
            Show this campaign to everyone
        </label>

        <label>
            <input type="radio" name="open-campaign" value="selected-users" {{#unless isOpen}}checked="checked"{{/unless}}>
            Show this campaign to selected users
        </label>

        <textarea class="form-control" name="distribution" id="distribution">
            {{#each popupAssignees}}
{{this}}
            {{/each}}
        </textarea>
    </div>
  </div>

  <div class="col-sm-offset-2 col-sm-10">
    <input class="btn btn-primary" type="submit" name="create" value="Create Popup">
    <input class="btn btn-default" type="button" name="cancel" value="Cancel">
  </div>
</form>
