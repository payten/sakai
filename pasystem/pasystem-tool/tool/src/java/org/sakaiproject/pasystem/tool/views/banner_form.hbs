<form class="form-horizontal" method="POST" action="{{{actionURL this 'banners' banner.uuid mode}}}">
  <div class="form-group">
    <label  class="col-sm-2 control-label" for="message">Message</label>
    <div class="col-sm-10">
      <input class="form-control" type="text" name="message" id="message" required value="{{banner.message}}"/>
    </div>
  </div>
  <div class="form-group">
    <label  class="col-sm-2 control-label" for="message">Hosts</label>
    <div class="col-sm-10">
      <input class="form-control" type="text" name="hosts" id="hosts" value="{{banner.hosts}}" />
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="active">Active</label>
    <div class="col-sm-10">
      <input class="form-control" type="checkbox" name="active" id="active" {{#if banner.active}}checked="checked"{{/if}}/>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="dismissible">Dismissible</label>
    <div class="col-sm-10">
      <input class="form-control" type="checkbox" name="dismissible" id="dismissible" {{#if banner.dismissible}}checked="checked"{{/if}}/>
    </div>
  </div>
  <div class="form-group">
    <label  class="col-sm-2 control-label" for="start_time">Start Time</label>
    <div class="col-sm-10">
      <div class="input-group">
        <input class="form-control datepicker" type="text" name="start_time" id="start_time" data-init-date="{{banner.startTime}}"/>
        <span class="input-group-btn">
          <button class="btn btn-default invoke-datepicker-btn" type="button"><span class="glyphicon glyphicon-calendar"></span></button>
          <button class="btn btn-default clear-datepicker-btn" type="button"><span class="glyphicon glyphicon-remove"></span></button>
        </span>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label  class="col-sm-2 control-label" for="end_time">End Time</label>
    <div class="col-sm-10">
      <div class="input-group">
        <input class="form-control datepicker" type="text" name="end_time" id="end_time" data-init-date="{{banner.endTime}}"/>
        <span class="input-group-btn">
          <button class="btn btn-default invoke-datepicker-btn" type="button"><span class="glyphicon glyphicon-calendar"></span></button>
          <button class="btn btn-default clear-datepicker-btn" type="button"><span class="glyphicon glyphicon-remove"></span></button>
        </span>
      </div>
    </div>
  </div>

  <div class="col-sm-offset-2 col-sm-10">
    <input class="btn btn-primary" type="submit" name="save" value="Save Banner">
    <input class="btn btn-default" type="button" name="cancel" value="Cancel">
  </div>
</form>
